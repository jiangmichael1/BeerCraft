<div class="container">
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
        <%= error %>
        <% end %>
    <% end %>

    <%= form_for @user do |f| %>
        <%=f.label :name %>
        <%=f.text_field :name %>
        <br>   
        <%=f.label :password %>
        <%=f.text_field :password %>
        <br>
        <%=f.label :age %>
        <%=f.number_field :age %>
        <br>
        <%=f.label :reason_for_visiting %>
        <%=f.text_field :reason_for_visiting %>
        <br>
        <%=f.submit "Register" %>

    <% end %>
</div>